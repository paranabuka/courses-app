{
  // Ruby
  "[ruby]": {
    "editor.formatOnSave": true
  },
  // ERB files
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.html.erb": "erb"
  },
  "emmet.includeLanguages": {
    "erb": "html"
  }
}
