<% content_for :title do %>
  Activities
<% end %>
<h3>
  <div class="text-center">
    Activities
    <span class="badge bg-info"><%= @activities.count %></span>
  </div>
</h3>
<p></p>
<ul class="list-group">
  <% @activities.each do |activity| %>
    <li class="list-group-item">
      <%= activity.created_at.strftime('%Y-%m-%d %H:%m') %>
      <%= "(#{time_ago_in_words(activity.created_at)})" %>
      <%= type_tag(activity.trackable_type) %>
      <%= activity.trackable_type %>
      <% if activity.trackable %>
        <%= link_to activity.trackable, activity_path(activity) %>
      <% else %>
        <i>[Deleted]</i>
      <% end %>
      <%= action_tag(activity.key.split('.').last) %>
      <%= activity.key %>
      by
      <%= link_to activity.owner, user_path(activity.owner) %>
      <% if activity.parameters.any? %>
        <%= "with #{activity.parameters}" %>
      <% end %>
    </li>
  <% end %>
</ul>
<div class="mt-3">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
