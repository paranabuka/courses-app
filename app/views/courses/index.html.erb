<p id="notice"><%= notice %></p>

<h3>
  <div class="text-center">
    Courses
    <span class="badge bg-info"><%= @courses.count %></span>
  </div>
</h3>

<p></p>

<div class="row">
  <div class="col-md-2">
    <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f| %>
      <%= f.label :title %>
      <%= f.search_field :title_cont, placeholder: "Title", class: "form-control form-control-sm" %>
      <%= f.label :description %>
      <%= f.search_field :short_description_cont, placeholder: "Description", class: "form-control form-control-sm" %>
      <%= f.label :language %>
      <%= f.select :language_cont, Course.languages, include_blank: true, class: "form-control form-control-sm" %>
      <%= f.label :level %>
      <%= f.select :level_cont, Course.levels, include_blank: true, class: "form-control form-control-sm" %>
      <%= f.label :price %>
      <%= f.search_field :price_eq, placeholder: "Price", class: "form-control form-control-sm" %>
      <%= f.label :instructor %>
      <%= f.search_field :user_email_cont, placeholder: "Instructor", class: "form-control form-control-sm" %>
      <%= f.submit %>
      <%= link_to courses_path, class: "btn btn-sm" do %>
        <i class="fa-solid fa-rotate"></i>
      <% end %>
    <% end %>

    <hr>

    <%= link_to new_course_path do %>
      <i class="fa-solid fa-square-plus"></i>
      New Course
    <% end %>
  </div>
  <div class="col-md-10">
    <div class="container my-4">
      <div class="row" data-masonry='{"percentPosition": true }'>
        <% @courses.each do |course| %>
          <div class="col-sm-6 col-lg-4 mb-4">
            <%= render partial: "course", locals: { course: course } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
