<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <i class="fa-solid fa-graduation-cap"></i>
      <%= link_to course.title, course %>
    </h5>
    <p class="card-text"><%= course.short_description %></p>
    <div class="card-footer">
      <%= number_to_currency(course.price) %>
    </div>
    <div class="card-footer d-flex">
      <div class="flex-grow-1">
        <i class="fa-solid fa-earth-africa"></i>
        <%= course.language %>
      </div>
      <div>
        <i class="fa-solid fa-signal"></i>
        <%= course.level %>
      </div>
    </div>
    <div class="card-footer d-flex">
      <div class="flex-grow-1">
        <i class="fa-regular fa-clock"></i>
        <%= course.created_at.strftime("%Y-%m-%d") %>
      </div>
      <div>
        <i class="fa-solid fa-chalkboard-user"></i>
        <%= course.user.username %>
      </div>
    </div>
    <% if current_user && policy(course).edit? %>
      <div class="card-footer">
        <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-outline-warning' %>
        <%= link_to 'Destroy', course, class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
</div>
