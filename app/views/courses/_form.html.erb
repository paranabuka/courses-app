<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="d-grid gap-2">
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :cover %>
      <% if @course.cover.attached? %>
        <figure>
          <%= image_tag @course.cover, class: 'img-thumbnail', alt: 'Course cover', width: '300px' %>
          <figcaption class="figure-caption">
            <%= "#{@course.cover.filename} (#{number_to_human_size(@course.cover.byte_size)})" %>
          </figcaption>
        </figure>
        <div class="row mb-3"></div>
      <% end %>
      <%= f.input :description, as: :rich_text_area %>
      <%= f.input :short_description %>
      <%= f.input :language, collection: Course.languages %>
      <%= f.input :level, collection: Course.levels %>
      <%= f.input :price %>
      <%= f.input :published %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
