<div class="card">
  <div class="card-header">
    <i class="fas fa-user"></i>
    <%= user.email %>
    <div class="card-footer">
      Signed up
      <%= time_ago_in_words(user.created_at) %>
      ago
    </div>
    <div class="card-footer">
      <%= 'sign_in_count'.humanize %>
      <%= user.sign_in_count %>
      <div class="row"></div>
      <%= 'current_sign_in_at'.humanize %>
      <%= user.current_sign_in_at %>
      <div class="row"></div>
      <%= 'last_sign_in_at'.humanize %>
      <%= user.last_sign_in_at %>
      <div class="row"></div>
      <%= 'current_sign_in_ip'.humanize %>
      <%= user.current_sign_in_ip %>
      <div class="row"></div>
      <%= 'last_sign_in_ip'.humanize %>
      <%= user.last_sign_in_ip %>
    </div>
    <div class="card-footer">
      Confirmed email?
      <% if user.confirmed_at.present? %>
        <span class="badge text-bg-success">Yes</span>
      <% else %>
        <span class="badge text-bg-danger">No</span>
      <% end %>
    </div>
    <div class="card-footer">
      <% user.roles.each do |role| %>
        <span class="badge bg-info"><%= role.name %></span>
      <% end %>
      <%= link_to 'Edit roles', edit_user_path(user), class: "btn btn-sm btn-warning text-dark" if policy(user).edit? %>
    </div>
  </div>
</div>
